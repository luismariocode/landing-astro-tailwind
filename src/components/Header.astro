---
import HeaderMobile from './HeaderMobile.jsx';
import HeaderLogo from '../assets/logoSmall.astro';
---

    <style>
        .logo {
            padding: 2px 0;
        }

        
    </style>

    <header transition:animate="none" class="bg-transparent fixed top-0 left-0 z-40 w-full sm:bg-black-950  text-white py-1 px-4 h-20 shadow-md">
        <div class="container mx-auto flex items-center justify-between h-full">
            <div class="logo hidden sm:block">
            <!-- Aquí puedes colocar tu logo -->
                <HeaderLogo class="w-6 h-6" />
            </div>
            <nav class="hidden sm:flex space-x-4">
            <!-- Enlaces de navegación para la versión de escritorio -->
            <a href="#home" class="hover:text-gray-300">Home</a>
            <a href="#servicios" class="hover:text-gray-300">Servicios</a>
            <a href="#Profesionistas" class="hover:text-gray-300">Profesionistas</a>
            <a href="#Historia" class="hover:text-gray-300">Historia</a>
            <a href="#Contacto" class="hover:text-gray-300">Contacto</a>
            </nav>    
           
    </header>
    <HeaderMobile client:visible transition:animate="none"/>

   


